<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="safepassPU" transaction-type="RESOURCE_LOCAL">

    <!-- Déclaration des entités JPA -->
    <class>com.safepass.models.User</class>

    <!-- Connexion PostgreSQL -->
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/safepass_db"/>
      <property name="jakarta.persistence.jdbc.user" value="safepass_user"/> <!-- ou safepass_user -->
      <property name="jakarta.persistence.jdbc.password" value="sousou1"/>

      <!-- Options Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>

  </persistence-unit>
</persistence>